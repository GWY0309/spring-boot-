<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.badmintonsystem.mapper.RacketMapper">

    <select id="findAvailableRackets" resultType="com.example.badmintonsystem.entity.Racket">
        SELECT * FROM t_racket WHERE status = 0
    </select>

    <select id="findById" resultType="com.example.badmintonsystem.entity.Racket">
        SELECT * FROM t_racket WHERE id = #{id}
    </select>

    <update id="updateStatus">
        UPDATE t_racket SET status = #{status} WHERE id = #{id}
    </update>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_racket (brand, model, status, rental_price_per_hour)
        VALUES (#{brand}, #{model}, #{status}, #{rentalPricePerHour})
    </insert>

    <update id="update">
        UPDATE t_racket
        SET
            brand = #{brand},
            model = #{model},
            status = #{status},
            rental_price_per_hour = #{rentalPricePerHour}
        WHERE
            id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM t_racket WHERE id = #{id}
    </delete>

</mapper>