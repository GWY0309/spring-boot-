<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.badmintonsystem.mapper.CourtMapper">
    <select id="findAll" resultType="com.example.badmintonsystem.entity.Court">
        SELECT * FROM t_court
    </select>

    <select id="findById" resultType="com.example.badmintonsystem.entity.Court">
        SELECT * FROM t_court WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_court (name, type, status, price_per_hour, open_time, close_time)
        VALUES (#{name}, #{type}, #{status}, #{pricePerHour}, #{openTime}, #{closeTime})
    </insert>
</mapper>